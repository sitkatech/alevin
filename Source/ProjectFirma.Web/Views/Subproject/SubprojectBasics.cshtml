@using LtInfo.Common.Views
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@using ProjectFirmaModels.Models
@using ProjectFirma.Web.Views.Shared.ProjectControls
@inherits ProjectFirma.Web.Views.Subproject.SubprojectBasics

<style>
    .basicsLayout .row {
        margin-left: 0;
        margin-right: 0;
    }

    .basicsLayout .row div {
        padding-left: 0;
        padding-right: 5px;
    }

    .basicsLayout hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

<script src="@Url.Content("~/Content/bootstrap-tags/bootstrap-tags.min.js")" type="text/javascript"></script>

<div class="basicsLayout">

    @*@{ ProjectTaxonomy.RenderPartialView(Html, ViewDataTyped.ProjectTaxonomyViewData); }

        @if (ViewDataTyped.TenantAttribute.EnableSecondaryProjectTaxonomyLeaf && ViewDataTyped.SecondaryTaxonomyLeaves.Any())
        {
            <hr />
            <div class="row">
                <div class="col-xs-12">
                    <label>
                        @Html.LabelWithSugarFor(FieldDefinitionEnum.SecondaryProjectTaxonomyLeaf.ToType(), LabelWithSugarForExtensions.DisplayStyle.HelpIconOnly)
                        @FieldDefinitionEnum.SecondaryProjectTaxonomyLeaf.ToType().GetFieldDefinitionLabelPluralized()
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <ul>
                        @foreach (var taxonomyLeaf in ViewDataTyped.SecondaryTaxonomyLeaves)
                        {
                            <li>@(taxonomyLeaf.GetDisplayNameAsUrl())</li>
                        }
                    </ul>
                </div>
            </div>
        }*@
    
    @{
        var implementationStartYear = ViewDataTyped.Subproject.ImplementationStartYear.HasValue ? MultiTenantHelpers.FormatReportingYear(ViewDataTyped.Subproject.ImplementationStartYear.Value) : null;
        var completionYear = ViewDataTyped.Subproject.CompletionYear.HasValue ? MultiTenantHelpers.FormatReportingYear(ViewDataTyped.Subproject.CompletionYear.Value) : null;
    }

    <hr />
    <div class="row">
        <div class="col-xs-5">
            @Html.LabelWithSugarFor(FieldDefinitionEnum.ProjectName.ToType())
        </div>
        <div class="col-xs-7">
            @ViewDataTyped.Subproject.SubprojectName
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5">
            @Html.LabelWithSugarFor(FieldDefinitionEnum.ProjectStage.ToType())
        </div>
        <div class="col-xs-7">
            @ViewDataTyped.Subproject.SubprojectStage.ProjectStageDisplayName
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            @Html.LabelWithSugarFor(FieldDefinitionEnum.ProjectDescription.ToType())
        </div>
        <div class="col-xs-12" style="padding-left: 20px">
            @Html.Raw(ViewDataTyped.Subproject.SubprojectDescription.HtmlEncodeWithBreaks())
        </div>
    </div>

    <hr />
    <div class="row">
        <div class="col-xs-6">
            @Html.LabelWithSugarFor(FieldDefinitionEnum.ImplementationStartYear.ToType())
        </div>
        <div class="col-xs-6">
            @implementationStartYear
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            @Html.LabelWithSugarFor(FieldDefinitionEnum.CompletionYear.ToType())
        </div>
        <div class="col-xs-6">
            @completionYear
        </div>
    </div>
    
    <hr />
    <div class="row">
        <div class="col-xs-12">
            @Html.LabelWithSugarFor(FieldDefinitionEnum.ProjectNote.ToType())
        </div>
        <div class="col-xs-12" style="padding-left: 20px">
            @Html.Raw(ViewDataTyped.Subproject.Notes.HtmlEncodeWithBreaks())
        </div>
    </div>
</div>
