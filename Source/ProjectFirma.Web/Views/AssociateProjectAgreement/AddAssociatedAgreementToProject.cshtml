@using LtInfo.Common.BootstrapWrappers
@using ProjectFirmaModels.Models
@using Newtonsoft.Json.Linq
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Views.AssociateProjectAgreement.AddAssociatedAgreementToProject
    <script type="text/javascript" src="@Url.Content("~/Views/AssociateProjectAgreement/AddAssociatedAgreementToProjectController.js")"></script>
    <script type="text/javascript">
    // <![CDATA[
    angular.module("ProjectFirmaApp").factory("angularModelAndViewData", function ()
    {
        return {
            AngularModel: @Html.Raw(JObject.FromObject(Model)),
            AngularViewData: @Html.Raw(JObject.FromObject(ViewDataTyped))
        };
    });
    jQuery(document).ready(function ()
    {
        angular.bootstrap(jQuery("#AddAssociatedAgreementToProjectApp"), ["ProjectFirmaApp"]);

        jQuery(".selectpicker").selectpicker();
        jQuery(".modal").on("hidden.bs.modal",
            function() {
                jQuery(".bootstrap-select.open").removeClass("open");
            });
    });
    // ]]>
    </script>
    <script type="text/javascript" src="/Content/Bootstrap-select/bootstrap-select.min.js"></script>
    <link rel="stylesheet" href="/Content/Bootstrap-select/bootstrap-select.min.css" type="text/css" />
   
    <div class="validationError">
        @Html.ValidationSummary()
    </div>
    <div id="AddAssociatedAgreementToProjectApp" ng-controller="AddAssociatedAgreementToProjectController">
        <div class="row">
            <div class="col-md-12">
                <p>Select an Agreement to add that will be associated with your @(FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel()).</p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">@Html.LabelWithSugarFor(x => x.SelectedReclamationAgreementID, FieldDefinitionEnum.Agreement.ToType().GetFieldDefinitionLabel(), true)</div>
            <div class="col-md-12">
                <div class="smallExplanationText">@FieldDefinitionEnum.Agreement.ToType().GetFieldDefinitionDescription()</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    @*Selectpicker*@
                    <div class="col-md-12">
                        <div class="input-group" style="width: 100%;">
                            <select class="selectpicker" ng-model="selectedAgreementID" data-width="100%" data-container="body" data-live-search="true" data-size="6">
                                <option value="0" disabled>Select an @(FieldDefinitionEnum.Agreement.ToType().GetFieldDefinitionLabel())</option>
                                <option ng-repeat="agreement in ReclamationAgreementOptions" value="{{agreement.ReclamationAgreementID}}">{{agreement.ReclamationAgreementDisplayName}}</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div ng-show="ReclamationCostAuthorityOptions.length > 0">
            <div class="row">
                <div class="col-md-12">@Html.LabelWithSugarFor( FieldDefinitionEnum.CostAuthorityWorkBreakdownStructure.ToType())</div>
                <div class="col-md-12">
                    <div class="smallExplanationText">@FieldDefinitionEnum.CostAuthorityWorkBreakdownStructure.ToType().GetFieldDefinitionDescription()</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        @*Selectpicker*@
                        <div class="col-md-12">
                            <div class="input-group" style="width: 100%;">
                                <select class="selectpicker" ng-model="selectedCostAuthorityID" data-width="100%" data-container="body" data-live-search="true" data-size="6" ng-disabled="selectedAgreementID == null">
                                    <option value="0" disabled>Select a @(FieldDefinitionEnum.CostAuthorityWorkBreakdownStructure.ToType().GetFieldDefinitionLabel())</option>
                                    <option ng-repeat="costAuthority in ReclamationCostAuthorityOptions" value="{{costAuthority.ReclamationCostAuthorityID}}">{{costAuthority.ReclamationCostAuthorityDisplayName}}</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            <input type="hidden" name="@Html.NameFor(x => x.SelectedReclamationAgreementID)" value="{{selectedAgreementID}}" />
            <input type="hidden" name="@Html.NameFor(x => x.SelectedReclamationCostAuthorityID)" value="{{selectedCostAuthorityID}}" />
        }
    </div>
