
@using LtInfo.Common.Views
@using ProjectFirma.Web.Views.Shared
@using ProjectFirma.Web.Views.Shared.ProjectGeospatialAreaControls
@inherits ProjectFirma.Web.Views.ProjectCreate.BulkSetSpatialInformation

@section JavascriptAndStylesContent
{
    @{ MapJavascriptIncludes.RenderPartialView(Html); }
}

<div style="min-height: 300px">
    <div>
        @{ BulkSetProjectSpatialInformation.RenderPartialView(Html, ViewDataTyped.BulkSetProjectSpatialInformationViewData, Model); }
    </div>
</div>
@if (@ViewDataTyped.ShowCommentsSection)
{
    <hr />
    <div class="row form-group">
        <div class="col-xs-12 col-sm-4 control-label">
            @Html.LabelFor(m => m.Comments)
        </div>
        <div class="col-xs-12 col-sm-8">
            @if (ViewDataTyped.CanEditComments)
            {
                @Html.TextAreaFor(m => m.Comments, new { style = "width: 100%", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Comments)
            }
            else
            {
                @Html.Raw(ViewDataTyped.Project.GeospatialAreaComment.HtmlEncodeWithBreaks())
            }
        </div>
    </div>
}
<hr />
<div class="pull-right">
    <button type="button" class="btn btn-xs btn-firma" onclick="saveForm(false)">Save</button>
    <button type="button" class="btn btn-xs btn-firma" onclick="saveForm(true)">Save &amp; Continue<span class='glyphicon glyphicon-chevron-right'></span></button>
</div>


<script type="text/javascript">
    // <![CDATA[
    jQuery(document).ready(function () { HookupCheckIfFormIsDirty("#@ViewDataTyped.BulkSetProjectSpatialInformationViewData.EditProjectGeospatialAreasFormID", ".submitProject"); });

    function saveForm(autoAdvance) {
        var form = jQuery("#@ViewDataTyped.BulkSetProjectSpatialInformationViewData.EditProjectGeospatialAreasFormID");
        // Do not submit if the form
        // does not pass client side validation

        if (!form.valid()) {
            return false;
        }

        @if (ViewDataTyped.CanEditComments)
            {
                <text>
                    var comments = jQuery("#@Html.IdFor(x => x.Comments)").val();
                    form.append('<input type="hidden" name="@Html.NameFor(x => x.Comments)" value="' + comments + '" />');
                </text>
            }

        jQuery("<input type='hidden' name='@Html.NameFor(x => x.AutoAdvance)' value=" + autoAdvance + " />").appendTo(form);
        form.submit();
    }
    // ]]>
</script>
