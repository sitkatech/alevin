@using ProjectFirma.Web.Controllers
@using ProjectFirmaModels.Models
@using LtInfo.Common
@using LtInfo.Common.ModalDialog
@using Microsoft.Web.Mvc
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Views.Shared.MatchmakerKeyword.BulkMatchmakerKeywordOrganizations

@if (Model.OrganizationIDList == null || !Model.OrganizationIDList.Any())
{
    
    <p>
        No @FieldDefinitionEnum.Organization.ToType().GetFieldDefinitionLabelPluralized() selected to have Matchmaker Keyword(s)[?].
    </p>

    <script type="text/javascript">
    // <![CDATA[
    var saveButtonId = "@ModalDialogFormHelper.SaveButtonID";
    jQuery("#" + saveButtonId).hide();
    // ]]>
    </script>

}
else
{
    using (Html.BeginForm<KeywordController>(x => x.AddMatchmakerKeywordsToOrganizationModal(null)))
    {
        <table class="dialogFormLayout">
            <tr>
                <th>@Html.LabelWithSugarFor(m => m.MatchmakerKeywordName)</th>
                <td>
                    @Html.TextBoxFor(m => m.MatchmakerKeywordName, new { id = "newBulkMatchmakerKeywordName", style = "width:522px" })
                    @Html.ValidationMessageFor(m => m.MatchmakerKeywordName)
                </td>
            </tr>
        </table>
        <div style="min-height: 150px; max-height: 350px; overflow-y: auto; overflow-x: hidden">
            <div style="margin: 5px 0">Keyword @Model.OrganizationIDList.Count @ViewDataTyped.OrganizationLabel:</div>
            <ul>
                @foreach (var projectName in ViewDataTyped.OrganizationDisplayNames)
                {
                    <li>@projectName</li>
                }

            </ul>

        </div>
    
        foreach (var organizationID in Model.OrganizationIDList)
        {
            <input type="hidden" name="@Html.NameFor(x => x.OrganizationIDList)" value="@organizationID"/>
        }

        <script>
            jQuery(document).ready(function()
            {
                jQuery("#newBulkMatchmakerKeywordName")
                    .typeahead({
                        items: "all",
                        autoSelect: false,
                        source: function(query, process)
                        {
                            jQuery.ajax({
                                dataType: 'json',
                                type: 'post',
                                async: true,
                                url: @Html.Raw(ViewDataTyped.FindMatchmakerKeywordUrl.ToJS()),
                                data: { q: query },
                                autoSelect: false
                            }).done(function(json) { return process(json); });
                        },
                        displayText: function(item) { return item.text; }
                    });
            });
        </script>
    }
}
