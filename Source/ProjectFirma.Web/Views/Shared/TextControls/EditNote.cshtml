@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.Shared.TextControls.EditNote
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-xs-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-sm-2 control-label">@Html.LabelWithSugarFor(m => m.Note)</div>
                    <div class="col-sm-10">
                        @Html.TextAreaWithMaxLengthFor(m => m.Note, new TextAreaForExtensions.TextAreaDimensions(null, 8), null, new List<string> { "form-control" })
                        @Html.ValidationMessageFor(m => m.Note)
                    </div>
                </div>
            </div>
        </div>
    </div>
}
