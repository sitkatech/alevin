@using LtInfo.Common.AgGridWrappers
@using ProjectFirma.Web.Models
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using ProjectFirmaModels.Models
@inherits ProjectFirma.Web.Views.ActionItem.Index
@section JavascriptAndStylesContent
{
    @{ AgGridIncludes.RenderPartialView(Html); }
}

<div class="row">
    <div class="col-md-12">
        @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }
    </div>
</div>

<div style="margin-top: 10px">
    @Html.AgGrid(ViewDataTyped.GridSpec, ViewDataTyped.GridName, ViewDataTyped.GridDataUrl, null, AgGridResizeType.VerticalFillHorizontalAutoFit)
</div>


<h2>Manage @FieldDefinitionEnum.SubprojectActionItem.ToType().GetFieldDefinitionLabelPluralized()</h2>
<div style="margin-top: 10px">
    @Html.AgGrid(ViewDataTyped.SubprojectActionItemGridSpec, ViewDataTyped.SubprojectActionItemGridName, ViewDataTyped.SubprojectActionItemGridDataUrl, null, AgGridResizeType.VerticalFillHorizontalAutoFit)
</div>


<script type="text/javascript">


    function setProjectActionStateFilterHandler(params) {

        const hardcodedFilter = { filter: ["@Html.Raw(string.Join("\", \"", ViewDataTyped.ActionItemStateToBeSelectedOnLoad))"] };
        @(ViewDataTyped.GridName)GridOptionsApi.setColumnFilterModel("ActionItemState", hardcodedFilter).then(() => {
            @(ViewDataTyped.GridName)GridOptionsApi.onFilterChanged();
        });

    }

    function setSubprojectActionStateFilterHandler(params) {

        const hardcodedFilter = { filter: ["@Html.Raw(string.Join("\", \"", ViewDataTyped.ActionItemStateToBeSelectedOnLoad))"] };
        @(ViewDataTyped.SubprojectActionItemGridName)GridOptionsApi.setColumnFilterModel("ActionItemState", hardcodedFilter).then(() => {
            @(ViewDataTyped.SubprojectActionItemGridName)GridOptionsApi.onFilterChanged();
        });

    }

    jQuery(document).ready(function()
    {


        @(ViewDataTyped.GridName)GridOptionsApi.addEventListener("firstDataRendered", setProjectActionStateFilterHandler);

        @(ViewDataTyped.SubprojectActionItemGridName)GridOptionsApi.addEventListener("firstDataRendered", setSubprojectActionStateFilterHandler);

    });


</script>