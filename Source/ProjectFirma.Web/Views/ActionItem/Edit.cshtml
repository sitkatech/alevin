@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Views.Shared
@using ProjectFirma.Web.Views
@using System.Web.Mvc.Html
@inherits ProjectFirma.Web.Views.ActionItem.Edit


<div class="row">
    <div class="col-md-12">
        @{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.PageContentViewData); }
    </div>
</div>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.ActionItemText)
            </div>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.ActionItemText, new { style = "width:100%", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ActionItemText)
            </div>
        </div>

    </div>
}