@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Views.Shared
@inherits ProjectFirma.Web.Views.User.Invite

@{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }

<div>
    <a class="btn backButton" href="@ViewDataTyped.IndexUrl">@BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left") Back to all Users</a>
</div>

@using (Html.BeginForm())
{
    <div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-sm-2 control-label">
                            @Html.LabelWithSugarFor(x => x.FirstName)
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.FirstName, new { style = "width:100%", @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.FirstName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2 control-label">
                            @Html.LabelWithSugarFor(x => x.LastName)
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.LastName, new { style = "width:100%", @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.LastName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2 control-label">
                            @Html.LabelWithSugarFor(x => x.Email)
                        </div>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Email, new { style = "width:100%", @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Email)
                        </div>
                    </div>
                   <div class="form-group">
                      <div class="col-sm-2 control-label">
                         @Html.LabelWithSugarFor(x => x.OrganizationID)
                      </div>
                      <div class="col-sm-10">
                         @Html.SearchableDropDownListFor(m => m.OrganizationID, ViewDataTyped.OrganizationsSelectList, new { @class = "selectpicker form-control" })
                         @Html.ValidationMessageFor(x => x.OrganizationID)
                         <p style="font-style: italic">If the Organization you are looking for is not shown, it may need to be added to Keystone. @ViewDataTyped.GetRequestOrgAddedToKeystoneModalDialogLink("Click Here") to request this be done for you.</p>
                      </div>
                   </div>

                   <div class="form-group">
                        <div class="col-sm-12 control-label">
                            @Html.CheckBoxFor(m => m.DoNotSendInviteEmailIfExisting)
                            If this user already has a Keystone account, do NOT send them an email inviting them to log in
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <hr />
        <div class="col-xs-12 col-sm-2">
            <div><sup>@Html.Raw(BootstrapHtmlHelpers.RequiredIcon)</sup> Required Field</div>
        </div>
        <div class="col-xs-12 col-sm-10" style="text-align: right">
            <button type="submit" class="btn btn-sm btn-firma">Invite</button>
            <a href="@ViewDataTyped.CancelUrl" class="btn btn-sm btn-firma" style="display: inline-block;">Cancel</a>
        </div>
    </div>
}