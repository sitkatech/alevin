@functions 
{
    private string GetOrganizationDisplayName()
    {
        // Tried to do this inline with chained ? operators, but told "C# 6.0 language feature". No time to investigate. -- SLG 9/10/2019
        if (ViewDataTyped.Agreement.Organization == null)
        {
            return string.Empty;
        }
        return ViewDataTyped.Agreement.Organization.GetDisplayName();
    }
}

@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }

    @*<script type="text/javascript" src="@Url.Content("~/Views/PerformanceMeasure/EditSubcategoriesAndOptionsController.js")"></script>*@

    <style>
        th {
            white-space: nowrap;
        }

        .chartHeader, a.chartHeader {
            font-weight: normal;
        }

        .nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
            background-color: #0b406b;
            color: #fff;
        }

        .nav > li.disabled > a, .nav-tabs > li.disabled > a:hover, .nav-tabs > li.disabled > a:focus {
            background-color: #ccc;
        }

        .panel-heading h1, .panel-heading h2, .panel-heading h3, .panel-heading h4 {
            margin: 0;
        }

        .panel-primary .panel-heading h4 {
            color: #fff;
            font-weight: bold;
        }

        .rightOfPageTitle {
            margin: 0;
        }
    </style>
}

<div>
    <a class="btn backButton" href="@ViewDataTyped.IndexUrl">
        @BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left")
        Back to all @MultiTenantHelpers.GetAgreementNamePluralized()
    </a>
</div>

<div class="row">
    <div class="col-lg-6 col-md-5">
        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>
                    @ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditAgreementBasicsUrl, string.Format("Edit Agreement: {0}", ViewDataTyped.Agreement.AgreementNumber), 1000, ViewDataTyped.UserHasAgreementManagePermissions)
                    Basics
                </h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Agreement Number</div>
                    <div class="col-xs-7">@ViewDataTyped.Agreement.AgreementNumber</div>
                </div>
                <div class="row">
                    @*<div class="col-xs-5 fieldLabel text-right">@Html.LabelWithSugarFor(ViewDataTyped.FieldDefinitionForPerformanceMeasure)</div>*@
                    <div class="col-xs-5 fieldLabel text-right">BOC</div>
                    <div class="col-xs-7">@ViewDataTyped.Agreement.BOC</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">@Html.LabelWithSugarFor(FieldDefinitionEnum.Organization.ToType())</div>
                    <div class="col-xs-7">@ViewDataTyped.Agreement.GetOrganizationDisplayName()</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">@FieldDefinitionEnum.ContractType.ToType().GetFieldDefinitionLabel()</div>
                    <div class="col-xs-7">@ViewDataTyped.Agreement.ContractType.ContractTypeDisplayName</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Old Agreement Number</div>
                    <div class="col-xs-7">@ViewDataTyped.Agreement.OldAgreementNumber</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Obligations</div>
                    <div class="col-xs-7">@AgreementGridSpec.GetObligationHrefsString(ViewDataTyped.Agreement)</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Start Date</div>
                    <div class="col-xs-7">@ViewDataTyped.Agreement.StartDate</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">End Date</div>
                    <div class="col-xs-7">@ViewDataTyped.Agreement.EndDate</div>
                </div>

                @*There are more fields we can show here, just am not doing it to start with. -- SLG*@
                @*<div class="row">
              <div class="col-xs-5 fieldLabel text-right"><label>Description</label></div>
              <div class="col-xs-7">@ViewDataTyped.PerformanceMeasure.PerformanceMeasureDefinition.ToHTMLFormattedString()</div>
        </div>*@
            </div>
        </div>
    </div>
</div>

