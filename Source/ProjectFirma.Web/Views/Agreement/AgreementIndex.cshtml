    @{ AgGridIncludes.RenderPartialView(Html); }
}

@section RightOfPageTitle
{
   @if (ViewDataTyped.ShowAgreementEditingControls)
   {
      @ModalDialogFormHelper.MakeNewIconButton(ViewDataTyped.NewAgreementUrl, string.Format("Create a new {0}", @FieldDefinitionEnum.Agreement.ToType().GetFieldDefinitionLabel()), ViewDataTyped.HasAgreementManagePermissions)
   }
