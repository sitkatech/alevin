@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
}

<div>
    <a class="btn backButton" href="@ViewDataTyped.BudgetObjectCodeIndexUrl">
        @BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left")
        Back to all Budget Object Codes
    </a>
</div>

<div class="row">
    <div class="col-lg-6 col-md-10">
        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>
                    @*No edit for BudgetObjectCode to start with.*@
                    @*@ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditPerformanceMeasureUrl, string.Format("Edit {0}: {1}", MultiTenantHelpers.GetPerformanceMeasureName(), ViewDataTyped.PerformanceMeasure.PerformanceMeasureDisplayName), 1000, ViewDataTyped.UserHasPerformanceMeasureOverviewManagePermissions)*@
                    Basics
                </h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Budget Object Code</div>
                    <div class="col-xs-7">@ViewDataTyped.BudgetObjectCode.BudgetObjectCodeName</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Budget Object Code Item Description</div>
                    <div class="col-xs-7">@ViewDataTyped.BudgetObjectCode.BudgetObjectCodeItemDescription</div>
                </div>
               <div class="row">
                  <div class="col-xs-5 fieldLabel text-right">Budget Object Code Definition</div>
                  <div class="col-xs-7">@ViewDataTyped.BudgetObjectCode.BudgetObjectCodeDefinition</div>
               </div>
               
               <div class="row">
                  <div class="col-xs-5 fieldLabel text-right">Parent Budget Object Group</div>
                  <div class="col-xs-7">@ViewDataTyped.BudgetObjectCode.BudgetObjectCodeGroup.GetDisplayName()</div>
               </div>

               <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">FBMS Year</div>
                    <div class="col-xs-7">@ViewDataTyped.BudgetObjectCode.FbmsYear</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Reportable 1099</div>
                    <div class="col-xs-7">@ViewDataTyped.BudgetObjectCode.Reportable1099</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Explanation 1099</div>
                    <div class="col-xs-7">@ViewDataTyped.BudgetObjectCode.Explanation1099</div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>
                    Obligation Item Invoices for Budget Object Code: @ViewDataTyped.BudgetObjectCode.GetDisplayName()
                </h2>
            </div>
            <div class="panel-body">
                @Html.DhtmlxGrid(ViewDataTyped.ObligationItemInvoiceGridSpec, ViewDataTyped.ObligationItemInvoiceGridName, ViewDataTyped.ObligationItemInvoiceGridDataUrl, null, DhtmlxGridResizeType.VerticalFillHorizontalAutoFit)
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>
                    Obligation Item Budgets for Budget Object Code: @ViewDataTyped.BudgetObjectCode.GetDisplayName()
                </h2>
            </div>
            <div class="panel-body">
                @Html.DhtmlxGrid(ViewDataTyped.ObligationItemBudgetGridSpec, ViewDataTyped.ObligationItemBudgetGridName, ViewDataTyped.ObligationItemBudgetGridDataUrl, null, DhtmlxGridResizeType.VerticalFillHorizontalAutoFit)
            </div>
        </div>
    </div>
</div>


