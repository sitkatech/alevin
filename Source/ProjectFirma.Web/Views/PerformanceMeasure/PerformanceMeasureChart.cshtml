@using ProjectFirma.Web.Views.PerformanceMeasure
@using ProjectFirma.Web.Views.Shared
@inherits PerformanceMeasureChart

<style>
    .subcategorySelector {
        font-size: 13px;
        margin-top: 5px;
    }

    .google-visualization-tooltip {
        z-index: 10000;
    }

    .googleTooltipDiv {
        padding-top: 5px;
        font-family: 'Open Sans', sans-serif;
        font-size: 12px;
    }

        .googleTooltipDiv p {
            margin-bottom: 8px;
            margin-left: 5px;
        }


    table.googleTooltipTable {
        margin-bottom: 5px;
    }

        table.googleTooltipTable tr td {
            margin: 0;
            padding: 2px 4px;
            white-space: nowrap;
        }

    .googleTooltipTableTotalRow {
        border-top: solid 2px #666;
    }
</style>

<div id="@(ViewDataTyped.ViewGoogleChartViewData.ChartUniqueName)" class="panel">
    <div class="panel-body">
        @{ ViewGoogleChart.RenderPartialView(Html, ViewDataTyped.ViewGoogleChartViewData); }

        @if (ViewDataTyped.ChartTotal != null && ViewDataTyped.PerformanceMeasure.IsSummable)
        {
            <p style="text-align: center;"><label>Total Accomplishments</label>: @String.Format("{0:n}", ViewDataTyped.ChartTotalFormatted)</p>
        }
    </div>
</div>