@using ProjectFirmaModels.Models
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Views.PerformanceMeasure.Edit

<style>.radio-inline {
     padding-top: 0 !important;
 }</style>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-3 control-label">
            @Html.LabelWithSugarFor(m => m.PerformanceMeasureDisplayName)
        </div>
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.PerformanceMeasureDisplayName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PerformanceMeasureDisplayName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3 control-label">
            @Html.LabelWithSugarFor(m => m.PerformanceMeasureTypeID)
        </div>
        <div class="col-sm-9">
            @Html.DropDownListFor(m => m.PerformanceMeasureTypeID, ViewDataTyped.PerformanceMeasureTypes, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PerformanceMeasureTypeID)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3 control-label">
            @Html.LabelWithSugarFor(m => m.MeasurementUnitTypeID)
        </div>
        <div class="col-sm-9">
            @Html.DropDownListFor(m => m.MeasurementUnitTypeID, ViewDataTyped.MeasurementUnitTypes, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MeasurementUnitTypeID)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3 control-label">
            @Html.LabelWithSugarFor(m => m.IsSummable)
        </div>
        <div class="col-sm-9">
            <div class="radio-inline">
                <label>@Html.RadioButtonFor(m => m.IsSummable, true) Yes</label>
            </div><div class="radio-inline">
                <label>@Html.RadioButtonFor(m => m.IsSummable, false) No</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3 control-label">
            @Html.LabelWithSugarFor(m => m.CanBeChartedCumulatively)
        </div>
        <div class="col-sm-9">
            <div class="radio-inline">
                <label>@Html.RadioButtonFor(m => m.CanBeChartedCumulatively, true) Yes</label>
            </div><div class="radio-inline">
                <label>@Html.RadioButtonFor(m => m.CanBeChartedCumulatively, false) No</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3 control-label">
            @Html.LabelWithSugarFor(m => m.IncludedInBiOpAnnualReport)
        </div>
        <div class="col-sm-9">
            <div class="radio-inline">
                <label>@Html.RadioButtonFor(m => m.IncludedInBiOpAnnualReport, true) Yes</label>
            </div><div class="radio-inline">
                <label>@Html.RadioButtonFor(m => m.IncludedInBiOpAnnualReport, false) No</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3 control-label">
            @Html.LabelWithSugarFor(m => m.PerformanceMeasureDefinition)
        </div>
        <div class="col-sm-9">
            <div style="max-height: 600px; overflow-y: auto">
                @Html.TextAreaFor(x => x.PerformanceMeasureDefinition, 6, 0, new { style = "resize:none;", @class = "form-control" })
            </div>
        </div>
    </div>
    @if (MultiTenantHelpers.DisplaySimpleAccomplishmentDashboard() && ViewDataTyped.UserHasAdminPermissions)
    {
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.PerformanceMeasureGroupID)
            </div>
            <div class="col-sm-9">
                @Html.DropDownListFor(m => m.PerformanceMeasureGroupID, ViewDataTyped.PerformanceMeasureGroups, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PerformanceMeasureGroupID)
            </div>
        </div>
    }

</div>
    @Html.HiddenFor(m => m.PerformanceMeasureID)
}
