@using ProjectFirmaModels.Models
@using LtInfo.Common
@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Views.ProjectUpdate.History

The following is the high-level summary of the history for this @FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabel() update.
<div style="margin: 10px 0 10px 0">Last Updated: @ViewDataTyped.ProjectUpdateBatch.LastUpdateDate.ToStringDateTime() - @Html.Raw(ViewDataTyped.ProjectUpdateBatch.LastUpdatePerson.GetFullNameFirstLastAndOrgAsUrl(ViewDataTyped.CurrentFirmaSession))</div>
<hr/>
<table class="summaryLayout" style="margin-top: 10px">
    <tr>
        <th>Date</th>
        <th>Action</th>
        <th>User</th>
    </tr>
    @foreach (var projectUpdateHistory in ViewDataTyped.ProjectUpdateBatch.ProjectUpdateHistories)
    {
        <tr>
            <td>@projectUpdateHistory.TransitionDate.ToStringDateTime()</td>
            <td>@projectUpdateHistory.ProjectUpdateState.ProjectUpdateStateDisplayName</td>
            <td>@Html.Raw(projectUpdateHistory.UpdatePerson.GetFullNameFirstLastAndOrgAsUrl(ViewDataTyped.CurrentFirmaSession))</td>
        </tr>
    }
</table>
