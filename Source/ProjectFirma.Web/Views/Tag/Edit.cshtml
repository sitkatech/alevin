@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.Tag.Edit
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.TagName)
            </div>
            <div class="col-xs-12 col-sm-9">
                @Html.TextBoxFor(m => m.TagName, new { style = "width:522px" })
                @Html.ValidationMessageFor(m => m.TagName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12 col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.TagDescription)
            </div>
            <div class="col-xs-12 col-sm-9">
                @Html.TextAreaWithMaxLengthFor(m => m.TagDescription, new TextAreaForExtensions.TextAreaDimensions(null, 4), null)
                @Html.ValidationMessageFor(m => m.TagDescription)
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.TagID)
}
