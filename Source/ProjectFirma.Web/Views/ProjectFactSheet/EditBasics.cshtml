@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.ProjectFactSheet.EditBasics

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.HiddenFor(m => m.TenantID)
        <div class="form-group">
            <div class="col-md-4 text-right">@Html.LabelWithSugarFor(m => m.ShowLeadImplementerLogoOnFactSheet)</div>
            <div class="col-md-8">
                @Html.CheckBoxFor(x => x.ShowLeadImplementerLogoOnFactSheet)
                @Html.ValidationMessageFor(x => x.ShowLeadImplementerLogoOnFactSheet)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 text-right">@Html.LabelWithSugarFor(m => m.ShowPhotoCreditOnFactSheet)</div>
            <div class="col-md-8">
                @Html.CheckBoxFor(x => x.ShowPhotoCreditOnFactSheet)
                @Html.ValidationMessageFor(x => x.ShowPhotoCreditOnFactSheet)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 text-right">@Html.LabelWithSugarFor(m => m.ShowExpectedPerformanceMeasuresOnFactSheet)</div>
            <div class="col-md-8">
                @Html.CheckBoxFor(x => x.ShowExpectedPerformanceMeasuresOnFactSheet)
                @Html.ValidationMessageFor(x => x.ShowExpectedPerformanceMeasuresOnFactSheet)
            </div>
        </div>
    </div>
}
