@using ProjectFirmaModels.Models
@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.BootstrapWrappers
@using LtInfo.Common.AgGridWrappers
@using ProjectFirma.Web.Common
@using ProjectFirma.Web.Models
@inherits ProjectFirma.Web.Views.CostAuthority.CostAuthorityDetail

@section JavascriptAndStylesContent
{
    @{ AgGridIncludes.RenderPartialView(Html); }

    @*<script type="text/javascript" src="@Url.Content("~/Views/PerformanceMeasure/EditSubcategoriesAndOptionsController.js")"></script>*@

    <style>
        th {
            white-space: nowrap;
        }

        .chartHeader, a.chartHeader {
            font-weight: normal;
        }

        .nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
            background-color: #0b406b;
            color: #fff;
        }

        .nav > li.disabled > a, .nav-tabs > li.disabled > a:hover, .nav-tabs > li.disabled > a:focus {
            background-color: #ccc;
        }

        .panel-heading h1, .panel-heading h2, .panel-heading h3, .panel-heading h4 {
            margin: 0;
        }

        .panel-primary .panel-heading h4 {
            color: #fff;
            font-weight: bold;
        }

        .rightOfPageTitle {
            margin: 0;
        }
    </style>
}

<div>
    <a class="btn backButton" href="@ViewDataTyped.IndexUrl">
        @BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-chevron-left")
        Back to all @MultiTenantHelpers.GetCostAuthorityNamePluralized()
    </a>
</div>

<div class="row">
    <div class="col-lg-6 col-md-5">
        <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
                <h2>
                    @*No edit for Cost Authorities to start with, but  likely won't have one ever.*@
                    @*@ModalDialogFormHelper.MakeEditIconLink(ViewDataTyped.EditPerformanceMeasureUrl, string.Format("Edit {0}: {1}", MultiTenantHelpers.GetPerformanceMeasureName(), ViewDataTyped.PerformanceMeasure.PerformanceMeasureDisplayName), 1000, ViewDataTyped.UserHasPerformanceMeasureOverviewManagePermissions)*@
                    Basics
                </h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">@FieldDefinitionEnum.CostAuthorityWorkBreakdownStructure.ToType().GetFieldDefinitionLabel()</div>
                    <div class="col-xs-7">@ViewDataTyped.CostAuthority.CostAuthorityWorkBreakdownStructure</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Cost Authority Number</div>
                    <div class="col-xs-7">@ViewDataTyped.CostAuthority.CostAuthorityNumber</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Account Structure Description</div>
                    <div class="col-xs-7">@ViewDataTyped.CostAuthority.AccountStructureDescription</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Job Number</div>
                    <div class="col-xs-7">@ViewDataTyped.CostAuthority.JobNumber</div>
                </div>
                <div class="row">
                    <div class="col-xs-5 fieldLabel text-right">Authority</div>
                    <div class="col-xs-7">@ViewDataTyped.CostAuthority.Authority</div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="panel panelFirma">
    <div class="panel-heading panelTitle">
        <h2>
            <a href="@ViewDataTyped.FullProjectListUrl">@FieldDefinitionEnum.Project.ToType().GetFieldDefinitionLabelPluralized()</a>
        </h2>
    </div>
    <div class="panel-body">
        @Html.AgGrid(ViewDataTyped.BasicProjectInfoGridSpec, ViewDataTyped.BasicProjectInfoProjectGridName, ViewDataTyped.BasicProjectInfoProjectGridDataUrl, "height:300px", AgGridResizeType.VerticalResizableHorizontalAutoFit)
    </div>
</div>

@* Agreements *@
<div class="panel panelFirma">
    <div class="panel-heading panelTitle">
        <h2>
            <a href="@ViewDataTyped.AgreementIndexUrl">@FieldDefinitionEnum.Agreement.ToType().GetFieldDefinitionLabelPluralized()</a>
        </h2>
    </div>
    <div class="panel-body">
        @Html.AgGrid(ViewDataTyped.AgreementGridSpec, ViewDataTyped.AgreementGridName, ViewDataTyped.AgreementGridDataUrl, "height:300px", AgGridResizeType.VerticalResizableHorizontalAutoFit)
    </div>
</div>


@if (ViewDataTyped.HasPnBudgetViewPermission)
{
   // PNBudgets
   <div class="row">
      <div class="col-xs-12">
         <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
               <h2>
                  PN Budgets
               </h2>
            </div>
            <div class="panel-body">
               @Html.AgGrid(ViewDataTyped.PnBudgetGridSpec, ViewDataTyped.PnBudgetGridName, ViewDataTyped.PnBudgetGridDataUrl, null, AgGridResizeType.VerticalFillHorizontalAutoFit)
               @*@Html.AgGrid(ViewDataTyped.ObligationItemInvoiceGridSpec, ViewDataTyped.ObligationItemInvoiceGridName, ViewDataTyped.ObligationItemInvoiceGridDataUrl, null, AgGridResizeType.VerticalFillHorizontalAutoFit)*@
            </div>
         </div>
      </div>
   </div>
}

@if (ViewDataTyped.HasObligationViewPermission)
{
   // Contractual Invoices
   <div class="row">
      <div class="col-xs-12">
         <div class="panel panelFirma">
            <div class="panel-heading panelTitle">
               <h2>
                  Contractual Invoices
               </h2>
            </div>
            <div class="panel-body">
               @Html.AgGrid(ViewDataTyped.ContractualInvoiceGridSpec, ViewDataTyped.ContractualInvoiceGridName, ViewDataTyped.ContractualInvoiceGridDataUrl, null, AgGridResizeType.VerticalFillHorizontalAutoFit)
            </div>
         </div>
      </div>
   </div>

    @*// Obligation Item Budgets
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panelFirma">
                <div class="panel-heading panelTitle">
                    <h2>
                        Obligation Item Budgets
                    </h2>
                </div>
                <div class="panel-body">
                    @Html.AgGrid(ViewDataTyped.ObligationItemBudgetGridSpec, ViewDataTyped.ObligationItemBudgetGridName, ViewDataTyped.ObligationItemBudgetGridDataUrl, null, AgGridResizeType.VerticalFillHorizontalAutoFit)
                </div>
            </div>
        </div>
    </div>*@

}




