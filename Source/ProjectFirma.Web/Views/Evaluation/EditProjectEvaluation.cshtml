@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.Evaluation.EditProjectEvaluation
<script type="text/javascript">
    // <![CDATA[


    jQuery(document).ready(function () {
        //angular.bootstrap(jQuery("#EditProjectEvaluationApp"), ["ProjectFirmaApp"]);

        //jQuery(".selectpicker").selectpicker("refresh");

    });
    // ]]>
</script>



@using (Html.BeginForm())
{

    <div class="form-horizontal">
        
        @foreach (var criterion in ViewDataTyped.EvaluationCriterionSimples)
        {
            <div class="form-group">
                <div class="col-sm-3 control-label">
                    <label for="@(string.Format("criterionField{0}", criterion.EvaluationCriterionID))">@criterion.EvaluationCriterionName</label>
                </div>
                <div class="col-sm-9">
                    <select id="@(string.Format("criterionField{0}", criterion.EvaluationCriterionID))">
                        @foreach (var value in criterion.EvaluationCriterionValueSimples)
                        {
                            <option value="@value.EvaluationCriterionValueID">@(value.EvaluationCriterionValueRating)</option>
                        }
                    </select>
                </div>
            </div>
        }
        
        <div class="form-group">
            <div class="col-sm-3 control-label">
                @Html.LabelWithSugarFor(m => m.Comments)
            </div>
            <div class="col-sm-9">
                @Html.TextAreaWithMaxLengthFor(m => m.Comments, new TextAreaForExtensions.TextAreaDimensions(null, 3), null, new List<string> {"form-control"})
                @Html.ValidationMessageFor(m => m.Comments)
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.ProjectEvaluationID)
}

