@using LtInfo.Common.HtmlHelperExtensions
@using ProjectFirma.Web.Controllers
@using LtInfo.Common.Mvc
@using Microsoft.Web.Mvc
@using ProjectFirma.Web.Common
@inherits ProjectFirma.Web.Views.FirmaHomePageImage.New
@using (Html.BeginForm<FirmaHomePageImageController>(x => x.New(null), FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <div class="form-horizontal">
        <div class="row form-group">
            <div class="col-md-4">@Html.LabelWithSugarFor(x => x.FileResourceData)</div>
            <div class="col-md-8">
                @Html.EditorFor(x => x.FileResourceData)
                <span class="smallExplanationText">
                    Allowed Extensions: @Model.GetFileExtensions(x => x.FileResourceData)
                </span>
                @Html.ValidationMessageFor(x => x.FileResourceData)
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-4">@Html.LabelWithSugarFor(x => x.Caption)</div>
            <div class="col-md-8">
                @Html.TextAreaWithMaxLengthFor(m => m.Caption, new TextAreaForExtensions.TextAreaDimensions(null, 5), null, new List<string> { "form-control" })
                <div class="smallExplanationText">Be concise yet descriptive. Thumbnails above will display by sort order specified.</div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-4">@Html.LabelFor(x => x.SortOrder)</div>
            <div class="col-md-8">
                @Html.TextBoxFor(x => x.SortOrder, new { style = "width:50px", type= "number" })
            </div>
        </div>
    </div>

}
