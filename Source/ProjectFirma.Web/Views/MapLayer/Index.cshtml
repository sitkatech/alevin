@using ProjectFirma.Web.Views
@using ProjectFirma.Web.Views.Shared
@using LtInfo.Common.DhtmlWrappers
@using LtInfo.Common.ModalDialog
@using ProjectFirma.Web.Models
@using ProjectFirmaModels.Models
@inherits ProjectFirma.Web.Views.MapLayer.Index
@section JavascriptAndStylesContent
{
    @{ DhtmlxGridIncludes.RenderPartialView(Html); }
}

@section RightOfPageTitle
{
    @ModalDialogFormHelper.MakeNewIconButton(ViewDataTyped.NewUrl, string.Format("Add a new {0}", @FieldDefinitionEnum.ExternalMapLayer.ToType().GetFieldDefinitionLabel()), ViewDataTyped.UserCanManage)
}


@{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.ViewPageContentViewData); }


<div style="margin-top: 10px;">
    @Html.DhtmlxGrid(ViewDataTyped.ExternalMapLayerGridSpec, ViewDataTyped.ExternalMapLayerGridName, ViewDataTyped.ExternalMapLayerGridDataUrl, null, DhtmlxGridResizeType.VerticalFillHorizontalAutoFit)
</div>

<h2 class="pageTitle" style="margin-top: 50px">Internal Map Layers</h2>
@{ ViewPageContent.RenderPartialView(Html, ViewDataTyped.InternalMapLayersViewPageContentViewData); }

<div style="margin-top: 10px;">
    @Html.DhtmlxGrid(ViewDataTyped.GeospatialAreaMapLayerGridSpec, ViewDataTyped.GeospatialAreaMapLayerGridName, ViewDataTyped.GeospatialAreaMapLayerGridDataUrl, null, DhtmlxGridResizeType.VerticalFillHorizontalAutoFit)
</div>
