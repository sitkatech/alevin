            </a>
        }
        else
        {
            <span>@reclamationAgreement.DisplayName</span>
        }*@

        <span>@reclamationAgreement.AgreementNumber</span>
        <span>@reclamationAgreement.GetReclamationCostAuthority().CostAuthorityWorkBreakdownStructure</span>

