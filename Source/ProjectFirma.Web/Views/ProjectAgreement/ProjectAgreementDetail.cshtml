            </span>
            <span style="margin-left: 8px; margin-right: 8px;">
                @ModalDialogFormHelper.MakeDeleteLink(BootstrapHtmlHelpers.MakeGlyphIcon("glyphicon-trash").ToString(), reclamationAgreement.GetDeleteUrl(), null, true)
            </span>
        }
        *@

